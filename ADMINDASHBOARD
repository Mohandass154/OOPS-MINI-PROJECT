package parking;

import javax.swing.*;
import java.awt.*;
import java.awt.event.*;
import java.sql.*;

public class AdminDashboard extends JFrame implements ActionListener {
    JButton addSlotBtn, viewSlotsBtn;
    JTextArea textArea;

    public AdminDashboard() {
        setTitle("Admin Dashboard - Parking System");
        setSize(600, 400);
        setLayout(new BorderLayout());
        setDefaultCloseOperation(EXIT_ON_CLOSE);
        setLocationRelativeTo(null);

        JPanel topPanel = new JPanel();
        addSlotBtn = new JButton("Add Slot");
        viewSlotsBtn = new JButton("View Slots");
        addSlotBtn.addActionListener(this);
        viewSlotsBtn.addActionListener(this);
        topPanel.add(addSlotBtn);
        topPanel.add(viewSlotsBtn);

        textArea = new JTextArea();
        add(topPanel, BorderLayout.NORTH);
        add(new JScrollPane(textArea), BorderLayout.CENTER);
    }

    public void actionPerformed(ActionEvent e) {
        if (e.getSource() == addSlotBtn) {
            new AddSlotDialog(this);
        } else if (e.getSource() == viewSlotsBtn) {
            showSlots();
        }
    }

    private void showSlots() {
        try (Connection conn = DBConnection.getConnection()) {
            Statement st = conn.createStatement();
            ResultSet rs = st.executeQuery("SELECT * FROM slots");
            textArea.setText("ID\tSlot Number\tAvailable\n");
            while (rs.next()) {
                textArea.append(rs.getInt("id") + "\t" + rs.getString("slot_number") +
                        "\t" + (rs.getInt("is_available") == 1 ? "Yes" : "No") + "\n");
            }
        } catch (SQLException ex) {
            ex.printStackTrace();
        }
    }
}
